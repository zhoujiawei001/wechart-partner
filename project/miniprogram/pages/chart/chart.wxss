.chart {
  width: 100%;
  height: 100%;
  padding-top: 48rpx;
  box-sizing: border-box;
}
.echart_panel {
  width: 100%;
  height: 80%;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.picker-pos {
  margin-top: -130rpx;
  margin-left: 150rpx;
  color: blueviolet;
}
.btns {
  display: flex;
  justify-content: center;
  align-items: center;
}
.btns .item {
  width: 100rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 1px solid transparent;
}
.btns .item:nth-child(2) {
  margin: 0 48rpx;
}
.btns .active {
  border-bottom: 1px solid #007dff;
  color: #007dff;
}
.page {
  display: flex;
  justify-content: center;
  align-items: center;
}
.page .btn {
  margin: 0 50rpx;
}
.echart_panel {
  position: relative;
}
.no_data {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(0,0,0,.35);
}