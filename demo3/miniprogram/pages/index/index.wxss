.container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
}
.logo {
  width: 160rpx;
  height: 160rpx;
}
.txt {
  font-size: 28rpx;
  margin: 52rpx 0 80rpx 0;
}
.form {
  width: 100%;
  box-sizing: border-box;
  padding: 0 28rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.item:last-child {
  margin-bottom: 40rpx;
}
.item_lf {
  width: calc(100% - 80rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #5486A7;
  border-radius: 8rpx;
  padding: 0 16rpx;
  box-sizing: border-box;

}
.item_lf .input {
  width: 75%;
  height: 56rpx;
}
.item_rt {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  background-color: #5486A7
}
.item_rt image {
  width: 42rpx;
  height: 42rpx;
}
.aside {
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255,255,255, .5);
  margin-bottom: 100rpx;
}
.btn {
  height: 72rpx;
  width: 180rpx;
  border-radius: 60rpx;
  background-color: #fff;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn:active {
  background-color: #ddd;
}